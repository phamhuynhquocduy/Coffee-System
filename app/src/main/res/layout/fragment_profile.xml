<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkCyan"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-64dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tài khoản"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white">
        </TextView>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_cricle"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:src="@mipmap/ic_logo_foreground">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_profile"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_tabprofile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/user"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:drawableTop="@drawable/ic_baseline_person_24"
                android:orientation="vertical">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_favorite"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_tabprofile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:text="Cà phê yêu thích"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:drawableTop="@drawable/ic_baseline_favorite_border_24"
                android:orientation="vertical">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_history_bill"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_tabprofile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/history_bill"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:drawableTop="@drawable/ic_baseline_history_24"
                android:orientation="vertical">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_location_store"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_tabprofile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/location_store"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:drawableTop="@drawable/ic_baseline_location_on_24"
                android:orientation="vertical">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khác"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_tabprofile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="8dp"
            android:text="@string/change_password"
            style="@style/TextAppearance.AppCompat.Button"
            android:textAllCaps="false"
            android:gravity="center_vertical">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_tabprofile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_baseline_wysiwyg_24"
            android:drawablePadding="8dp"
            android:text="@string/rule"
            style="@style/TextAppearance.AppCompat.Button"
            android:textAllCaps="false"
            android:gravity="center_vertical">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_tabprofile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_baseline_contactless_24"
            android:drawablePadding="8dp"
            android:text="@string/contact"
            style="@style/TextAppearance.AppCompat.Button"
            android:textAllCaps="false"
            android:gravity="center_vertical">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_tabprofile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:drawablePadding="8dp"
            android:text="Đăng xuất"
            style="@style/TextAppearance.AppCompat.Button"
            android:textAllCaps="false"
            android:gravity="center_vertical">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</LinearLayout>